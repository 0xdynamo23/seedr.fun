generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id 
  name     String?
  email    String?
  role     Role      @default(USER)
  projects Project[]
}

model Project {
  id           String         @id @default(uuid())
  name         String
  tagline      String
  category     String
  logo         String
  projectPics  String[]
  teamEmails   String[]
  contactEmail String
  description  String
  createdAt    DateTime       @default(now())
  ownerId      String
  owner        User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  status       ProjectStatus  @default(PENDING)

  links        Links[]
}

model Links {
  id        Int      @id @default(autoincrement())
  telegram  String?
  x         String?
  discord   String?
  website   String?
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

enum ProjectStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum Role {
  USER
  ADMIN
}

